{
    "openapi": "3.0.1",
    "info": {
        "version": "1.0.0",
        "title": "TWEP",
        "description": "TWEP API"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local server"
        }
    ],
    "tags": [
        {
            "name": "User API"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": ["User API"],
                "description": "Get users",
                "operationId": "getUsers",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Users returned successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            },
            "post": {
                "tags": ["User API"],
                "description": "Add new user",
                "operationId": "createUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "409": {
                        "$ref": "#/components/responses/Conflict"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        },
        "/user/{id}": {
            "get": {
                "tags": ["User API"],
                "description": "Get user",
                "operationId": "getUser",
                "parameters": [
                    {
                       "name": "id",
                        "in": "path",
                        "required": "true",
                        "schema": {
                            "type": "string"
                        } 
                    }
                ],
                "responses": {
                     "200": {
                        "description": "User found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "required": true
                    }
                }
            },

            "Users": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/User"
                }
            }
            
        },

        "responses": {
            "NotFound": {
                "description": "Not found"
            },
            "InternalServerError": {
                "description": "Internal server error"
            },
            "Conflict": {
                "description": "Conflict"
            }
        }
    }

}